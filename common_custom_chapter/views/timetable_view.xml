<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_session_tree_inherit" model="ir.ui.view">
            <field name="name">op.session.tree.inherit</field>
            <field name="model">op.session</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="openeducat_timetable.view_op_session_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='subject_id']" position="after">
                    <field name="chapter_ids" widget="many2many_tags"  options="{'no_create_edit': True}"/>
                    <field name="lesson_ids" widget="many2many_tags"  options="{'no_create_edit': True}"
                            domain="[('chapter_id','=',chapter_ids)]"/>
                    <field name="activity_id" options="{'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>
        <record id="view_op_session_form_inherit" model="ir.ui.view">
            <field name="name">op.session.form.inherit</field>
            <field name="model">op.session</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="openeducat_timetable.view_op_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group[2]/field[@name='subject_id']" position="after">
                    <field name="chapter_ids" widget="many2many_tags"  options="{'no_create_edit': True}"/>
                    <field name="lesson_ids" widget="many2many_tags"  options="{'no_create_edit': True}"
                            domain="[('chapter_id','=',chapter_ids)]"/>
                    <field name="activity_id" options="{'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>