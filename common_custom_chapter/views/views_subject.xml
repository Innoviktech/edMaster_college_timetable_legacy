<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_op_subject_tree_inherit" model="ir.ui.view">
            <field name="name">op.subject.tree.inherit</field>
            <field name="model">op.subject</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="openeducat_core.view_op_subject_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//tree/field[@name='subject_type']" position="after">
                    <field name="chapter_ids" widget="many2many_tags" />
                </xpath>
            </field>
        </record>
        <record id="view_op_subject_form" model="ir.ui.view">
            <field name="name">op.subject.form</field>
            <field name="model">op.subject</field>
            <field name="priority" eval="8" />
            <field name="inherit_id" ref="openeducat_core.view_op_subject_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group" position="after">
                    <group string="Chapters" name="chapter">
                        <field name="chapter_ids" nolabel="1" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>